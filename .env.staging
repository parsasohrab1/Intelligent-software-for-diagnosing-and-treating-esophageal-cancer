# INEsCape Staging Environment Variables

# Application
ENVIRONMENT=staging
DEBUG=False
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=inescape_staging
POSTGRES_USER=inescape_staging_user
POSTGRES_PASSWORD=staging_password_change_me

# Database - MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=inescape_staging_metadata
MONGODB_USER=inescape_staging_user
MONGODB_PASSWORD=staging_password_change_me

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=staging_redis_password_change_me

# Security (CHANGE THESE IN PRODUCTION!)
STAGING_SECRET_KEY=staging-secret-key-change-in-production-use-strong-random-key
STAGING_ENCRYPTION_KEY=staging-encryption-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs (Optional)
TCGA_API_KEY=
GEO_API_KEY=
KAGGLE_USERNAME=
KAGGLE_KEY=

# Monitoring
PROMETHEUS_PORT=9091
GRAFANA_PORT=3002

# Storage
STORAGE_ENDPOINT=minio:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=inescape-staging-data
STORAGE_USE_SSL=False

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://staging.example.com"]

# Grafana
STAGING_GRAFANA_PASSWORD=admin
